#改ip 

cat >> 00-installer-config.yaml << EOF
network:
  version: 2
  renderer: NetworkManager
  ethernets:
    enp1s0:
      dhcp4: false
      dhcp6: false
      addresses: 
        -  192.168.0.201/24
      routes: 
        -  to: default
           via: 192.168.0.1
      nameservers:
        addresses:
          -  192.168.0.1
          -  114.114.114.114
          -  8.8.8.8




#cat 改最简ip
cat >> 00-installer-config.yaml << EOF
network:
  ethernets:
    enp1s0:
      dhcp4: true
      dhcp6: false
  version: 2



#设置系统时区
timedatectl

sudo systemctl status systemd-timesyncd.service

sudo timedatectl set-ntp true  #手动设置时区同步

sudo timedatectl set-timezone Asia/Shanghai #手动设置时区


# mount lvm disk
fdisk -l /dev/sdb
lvmdiskscan  #查看lvm disk
vgchange -ay #应该是把lvm归组
lvscan #查看归组的lvm
mount /dev/ubuntu-vg/lv-root /mnt/disk #mount lvm disk
